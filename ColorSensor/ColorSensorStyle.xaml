<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:ColorSensor">
    
    <Style TargetType="{x:Type local:ColorSensorControl}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:ColorSensorControl}">
                    <!--<Border Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}">
                </Border>-->
                    <Border BorderBrush="Black" BorderThickness="1">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="50"/>
                                <ColumnDefinition Width="100"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="30"/>
                                <RowDefinition Height="30"/>
                                <RowDefinition Height="30"/>
                                <RowDefinition Height="30"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <Label Content="Red" Grid.Column="0" Grid.Row="0" VerticalAlignment="Center"/>
                            <TextBlock x:Name="PART_RedValue" Text="RedValue" VerticalAlignment="Center" Grid.Column="1" Grid.Row="0"/>

                            <Label Content="Green" Grid.Column="0" Grid.Row="1" VerticalAlignment="Center"/>
                            <TextBlock x:Name="PART_GreenValue" Text="GreenValue" VerticalAlignment="Center" Grid.Column="1" Grid.Row="1" />

                            <Label Content="Blue" Grid.Column="0" Grid.Row="2" VerticalAlignment="Center"/>
                            <TextBlock x:Name="PART_BlueValue" Text="BlueValue" VerticalAlignment="Center" Grid.Column="1" Grid.Row="2" />

                            <Label Content="White" Grid.Column="0" Grid.Row="3" VerticalAlignment="Center"/>
                            <TextBlock x:Name="PART_WhiteValue" Text="WhiteValue" VerticalAlignment="Center" Grid.Column="1" Grid.Row="3" />

                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>